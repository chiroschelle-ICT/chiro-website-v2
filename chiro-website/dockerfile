# Dockerfile for Angular App
FROM node:14 as build

# Set working directory
WORKDIR /usr/src/app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy the app code and build it
COPY . .
RUN ng serve

# Stage 2: Serve the app
FROM nginx:alpine
COPY --from=build /usr/src/app/dist/your-angular-app /usr/share/nginx/html

# Expose port 80
EXPOSE 4200
